# Tandril Standalone Backend Configuration
# Copy this file to .env.local for local development

# ============================================================================
# Backend API Configuration
# ============================================================================

# Backend API URL - Point to your deployed backend or local server
VITE_API_BASE_URL=http://localhost:3001

# For production, use your Railway/Vercel backend URL:
# VITE_API_BASE_URL=https://your-backend.railway.app

# ============================================================================
# Supabase Authentication
# ============================================================================

# Get these from: https://app.supabase.com/project/_/settings/api
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ============================================================================
# Legacy Base44 Configuration (Optional - for backward compatibility)
# ============================================================================

# Set to 'true' to use standalone backend (recommended)
# Set to 'false' to use Base44 (legacy)
VITE_STANDALONE_MODE=true

# Base44 API endpoint (only needed if VITE_STANDALONE_MODE=false)
# VITE_API_BASE_URL_LEGACY=https://api.base44.com

# Base44 SDK Configuration (only needed if VITE_STANDALONE_MODE=false)
# VITE_BASE44_API_KEY=your_api_key_here

# ============================================================================
# Additional Configuration
# ============================================================================

# Environment
VITE_ENV=development

# OpenAI API Key (for AI features)
VITE_OPENAI_API_KEY=your-openai-key-here

# Shopify App Credentials (get from Shopify Partners dashboard)
VITE_SHOPIFY_API_KEY=your-shopify-api-key
VITE_SHOPIFY_API_SECRET=your-shopify-api-secret
