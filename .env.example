# Base44 API Configuration
# Copy this file to .env.local for local development

# IMPORTANT: Set to 'true' to run without Base44 authentication (demo/standalone mode)
# Set to 'false' or remove this variable to use Base44 authentication
VITE_STANDALONE_MODE=true

# Base44 API endpoint (only needed if VITE_STANDALONE_MODE=false)
# VITE_API_BASE_URL=https://api.base44.com

# Base44 SDK Configuration (only needed if VITE_STANDALONE_MODE=false)
# VITE_BASE44_API_KEY=your_api_key_here

# Environment
# VITE_ENV=production

# Add any other environment variables your app needs here
